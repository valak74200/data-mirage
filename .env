# Data Mirage Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database (using SQLite for local development)
DATABASE_URL=sqlite:///./data_mirage.db

# Security (generate a random secret key)
SECRET_KEY=this_is_a_very_long_secret_key_for_development_only_with_enough_entropy_0123456789abcdef

# Server settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Redis (optional for development)
REDIS_URL=redis://localhost:6379

# OpenAI API (optional)
OPENAI_API_KEY=

# File upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100000000