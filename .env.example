# Data Mirage FastAPI Configuration
# Copy this file to .env and update values

# Application Settings
APP_NAME="Data Mirage API"
VERSION="2.0.0"
DESCRIPTION="Advanced 3D data visualization with ML processing"
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration (PostgreSQL with asyncpg)
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/datamirage

# Security Configuration
SECRET_KEY=your-super-secret-key-at-least-32-characters-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# OpenAI API Configuration (for RAG explanations)
OPENAI_API_KEY=your-openai-api-key-here

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Production Settings
# ENVIRONMENT=production
# DEBUG=false
# HOST=0.0.0.0
# PORT=8000
# CORS_ORIGINS=https://your-production-domain.com